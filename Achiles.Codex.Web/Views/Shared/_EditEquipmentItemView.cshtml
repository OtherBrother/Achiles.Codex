@model Achilles.Codex.Web.Models.ICodexItemModel<Achilles.Codex.Model.EquipmentItem>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Name, short description and Icon Url</h3>
    </div>
    <div class="panel-body">
        <div class="form-group">
            <div class="col-sm-12">
                <input class="form-control" id="EquipmentItem_Price" name="EquipmentItem.Price" placeholder="Enter item price" value="@Model">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <input class="form-control" id="EquipmentItem_Weight" name="EquipmentItem.Weight" placeholder="Enter item weight" value="@Model">
            </div>
        </div>
    </div>
</div>