@model Achiles.Codex.Web.Models.ICodexItemModel<Achiles.Codex.Model.CodexItemBase>

<input type="hidden" name="CodexItem.Id" value="@Model.__CodexItemBase.Id" />
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Name, short description and Icon Url</h3>
    </div>
    <div class="panel-body">
        <div class="form-group">
            <div class="col-sm-12">
                <input class="form-control" id="CodexItem_Name" name="CodexItem.Name" placeholder="Enter codex item name" value="@Model.__CodexItemBase.Name">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <textarea rows="4" class="form-control" id="CodexItem_Description" name="CodexItem.Description" placeholder="Enter short description">@HttpUtility.HtmlDecode(Model.__CodexItemBase.Description)</textarea>
            </div>
        </div>
        <div class="form-group">
            <label for="IconUrl" class="col-sm-2 control-label">Icon Url</label>
            <div class="col-sm-10">
                <input class="form-control" id="CodexItem_IconUrl" name="CodexItem.IconUrl" placeholder="Icon url" value="@Model.__CodexItemBase.IconUrl">
            </div>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Related items & tags</h3>
    </div>
    <div class="panel-body">
        <div class="form-group">
            <label for="Tags" class="col-sm-2 control-label">Tags</label>
            <div class="col-sm-10">
                <select multiple data-role="tagsinput" id="CodexItem_Tags" name="CodexItem.Tags">
                    @foreach (var tag in Model.__CodexItemBase.Tags)
                    {
                        <option value="@tag">@tag</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="RelatedItems" class="col-sm-2 control-label">Related items</label>
            <div class="col-sm-10">
                <select multiple data-role="tagsinput" id="CodexItem_RelatedItems" name="CodexItem.RelatedItems">
                    @foreach (var relatedItem in Model.__CodexItemBase.RelatedCodexItems)
                    {
                        <option value="@relatedItem.Id">@relatedItem.Id</option>
                    }
                </select>
            </div>
        </div>

    </div>
</div>
