@using Achiles.Codex.Web.Misc
@model Achiles.Codex.Web.Models.AttributeInfo

<h2>Edit @Model.Name</h2>
@if (ViewBag.Saved)
{
    <div class="alert alert-success"><strong>Success!</strong> Attribute information saved successfully</div>
}
<hr />

<form role="form" method="post">
    <div class="form-group">
        @Html.HiddenFor(m=>m.Id)
        <label for="Description">Attribute description</label>
        <textarea rows="10" class="form-control" id="Description" name="Description" placeholder="Enter attribute description">@HttpUtility.HtmlEncode(Model.Description)</textarea>
    </div>
    <button type="submit" class="btn btn-default">Save</button>
</form>
