@using Achilles.Codex.Web.Misc
@model IEnumerable<Achilles.Codex.Model.Talent>

<h2>Talents</h2>
<p class="text-muted">
    Talents are numerical values of certain character qualities, and are used in non-combat gear – all prolonged situations or actions performed when not under stress.
</p>
<hr />


@{
    ViewBag.Title = "Talent";
}

<h2>Index</h2>

<p>
    <div class="row">
        <div class="col-xs-2">
            <input type="text" class="form-control" id="filterAttributes" placeholder="fillter">
        </div>
        <div class="col-xs-2">
            @if (User.IsContributor()) //only contributors can add new talent
            {<a class="btn btn-default" href="@Url.Action("Edit","Talent")" title="Add new talent">
                <span class="glyphicon glyphicon-plus-sign"></span> New Talent
            </a>}
        </div>
    </div>
</p>








