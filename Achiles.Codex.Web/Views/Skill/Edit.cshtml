@model Achiles.Codex.Web.Models.CodexItemModel<Achiles.Codex.Model.Skill>

@if (Model.IsNew)
{
    <h2>New Skill</h2>
}
else
{
    <h2>Edit Skill <em>@(Model.CodexItem.Name ?? "<new Skill>") </em></h2>
}

<ul class="nav nav-tabs">
    <li class="active"><a href="#basic-info" data-toggle="tab">Basic information</a></li>
    <li><a href="#article" data-toggle="tab">Article</a></li>
    <li><a href="#specialization" data-toggle="tab">Specilization</a></li>
</ul>
<br />
@Html.ValidationSummary(false)

@using ((Html.BeginForm()))
{
    <div class="tab-content">

        <div class="tab-pane fade in active" id="basic-info">
            @Html.Partial("_EditCodexItemBasicInfoView", Model)
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Category, Specialization</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-sm-12">
                            <input class="form-control" id="Category" name="Category" placeholder="Enter skill category" value="">
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="tab-pane fade in" id="article">
            @Html.Partial("_EditCodexItemArticleView", Model)
        </div>


        <div class="tab-pane fade in" id="specialization">
            <div class="col-sm-10">
                <h2> Specialization </h2>
                @*TODO: List form for Specializations *@
            </div>
        </div>


    </div>
    
    
    <hr />
    <div class="btn-group">
        <button type="submit" class="btn btn-primary">Save Skill</button>
    </div>
}

@section Head
{
    @Styles.Render("~/Content/edit-codex-item-basic-info")
    @Styles.Render("~/Content/edit-codex-item-article")
}

@section scripts
{
    @Scripts.Render("//tinymce.cachefly.net/4.0/tinymce.min.js")

    @Scripts.Render("~/bundles/edit-codex-item-basic-info")
    @Scripts.Render("~/bundles/edit-codex-item-article")

}


