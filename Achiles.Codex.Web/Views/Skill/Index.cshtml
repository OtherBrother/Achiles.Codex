@using Achiles.Codex.Web.Misc
@model IEnumerable<Achiles.Codex.Model.Skill>

<h2>Skills</h2>
<p class="text-muted">
    Skills are a numerical representation of characters training in a certain field.
</p>
<hr />


@{
    ViewBag.Title = "Skill";
}

<h2>Index</h2>

<p>
    <div class="row">
        <div class="col-xs-2">
            <input type="text" class="form-control" id="filterAttributes" placeholder="fillter">
        </div>
        <div class="col-xs-2">
            @if (User.IsContributor()) //only contributors can add new attribute
            {<a class="btn btn-default" href="@Url.Action("Edit","Skill")" title="Add new skill">
                <span class="glyphicon glyphicon-plus-sign"></span> New Skill
            </a>}
        </div>
    </div>
</p>

